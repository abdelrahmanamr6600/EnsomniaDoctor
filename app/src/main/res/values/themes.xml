<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EnsomniaDoctor" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorAccent">@color/dark_red</item>
    </style>

    <style name="Theme.EnsomniaDoctor" parent="Base.Theme.EnsomniaDoctor" />

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/black</item>
        <item name="stFont">@font/ntailub</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#FFFF</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">@color/dark_red</item>
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stRadius">5dp</item>
    </style>
</resources>